<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
   			 <TextView
	               android:id="@+id/tree_view_border"
	               android:layout_width="match_parent"
	               android:layout_height="1px"
	               android:background="#ddd" />
              <LinearLayout
	               android:id="@+id/tree_node_item"
	               android:layout_width="fill_parent"
	               android:layout_height="44dp"
	               android:background="#f6f6f6"
	               android:orientation="horizontal" >
	               <ImageView 
	                    android:id="@+id/grouporpeople"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/group_default"
				        android:layout_gravity="center"
						android:paddingLeft="10dp"
				        />
	               <LinearLayout
	                   android:id="@+id/tree_item"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:orientation="horizontal"
	                   android:background="#f6f6f6"
	                   android:layout_gravity="center"
	                   >
		               <TextView
		                   android:id="@+id/groupName"
		                   android:layout_width="0dp"
		                   android:layout_height="wrap_content"
		                   android:layout_gravity="center_vertical"
		                   android:layout_weight="1"
		                   android:gravity="center_vertical"
		                   android:paddingLeft="10dp"
		                   android:text="密码修改"
		                   android:textColor="#666"
		                   android:textSize="16sp" /><!--密码修改  -->
		               <ImageView
		                   android:id="@+id/isExpand"
		                   android:layout_width="50dp"
		                   android:layout_height="wrap_content"
		                   android:layout_gravity="center_vertical"
		                   android:paddingRight="10dp"
		                   android:src="@drawable/tree_down" />
	               </LinearLayout>
         		 </LinearLayout>
				<TextView
		               android:layout_width="match_parent"
		               android:layout_height="1px"
		               android:background="#ddd" />
				
				 <LinearLayout
		             android:id="@+id/tree_child"
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:orientation="vertical"  
		             android:paddingLeft="15dp"
		             android:visibility="gone"
		             >  <!-- 子布局 缩进在这里处理的 -->
	               
	      		</LinearLayout>
</LinearLayout>
